# 应用基础配置
VITE_APP_NAME="AI Knowledge Base"
VITE_APP_VERSION="1.0.0"

# API配置
VITE_API_URL="http://localhost:5000/api"
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# 认证配置
VITE_SESSION_TIMEOUT=86400000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000
VITE_PASSWORD_MIN_LENGTH=6

# 缓存配置
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=100

# 存储配置
VITE_STORAGE_ENCRYPTION_KEY="your-encryption-key"
VITE_STORAGE_MAX_AGE=604800000

# 性能配置
VITE_DEBOUNCE_TIME=300
VITE_THROTTLE_TIME=100
VITE_VIRTUAL_SCROLL_ITEM_HEIGHT=40
VITE_LAZY_LOAD_OFFSET=100
VITE_IMAGE_COMPRESSION_QUALITY=0.8

# 功能开关
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_SEARCH=true

# 编辑器配置
VITE_AUTO_SAVE_INTERVAL=30000
VITE_MAX_CONTENT_LENGTH=50000
VITE_ENABLE_SPELL_CHECK=true
VITE_ENABLE_SYNTAX_HIGHLIGHT=true
VITE_EDITOR_THEME="default"

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,text/plain,application/pdf"
VITE_MAX_FILES=5
VITE_COMPRESSION_QUALITY=0.8

# 分页配置
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# 搜索配置
VITE_SEARCH_DEBOUNCE_TIME=300
VITE_MIN_QUERY_LENGTH=2
VITE_MAX_SEARCH_RESULTS=50
VITE_ENABLE_SEARCH_HIGHLIGHT=true
VITE_ENABLE_AUTO_COMPLETE=true

# 通知配置
VITE_NOTIFICATION_POSITION="top-right"
VITE_NOTIFICATION_DURATION=5000
VITE_MAX_NOTIFICATIONS=5
VITE_ENABLE_NOTIFICATION_SOUND=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# 主题配置
VITE_DEFAULT_THEME="light"
VITE_ENABLE_SYSTEM_THEME=true
VITE_PRIMARY_COLOR="#3b82f6"
VITE_SECONDARY_COLOR="#6b7280"
VITE_SUCCESS_COLOR="#10b981"
VITE_WARNING_COLOR="#f59e0b"
VITE_ERROR_COLOR="#ef4444"

# 日志配置
VITE_LOG_LEVEL="info"
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_REMOTE_LOG=false
VITE_REMOTE_LOG_URL=""
VITE_MAX_LOGS=1000
VITE_ENABLE_PERFORMANCE_LOG=false

# 安全配置
VITE_ENABLE_CSP=false
VITE_ENABLE_XSRF_PROTECTION=true
VITE_MAX_REQUESTS_PER_MINUTE=60
VITE_ENABLE_INPUT_SANITIZATION=true
VITE_ALLOWED_HOSTS=""

# 开发配置
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HMR=true
VITE_SHOW_PERFORMANCE_METRICS=false